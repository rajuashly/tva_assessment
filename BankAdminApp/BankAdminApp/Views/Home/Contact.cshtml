@{
    ViewData["Title"] = "Contact";
}
<h4>@ViewData["Title"] </h4>
<hr />
<div class="row justify-content-center" >
    <div class="col-12 col-md-8 col-lg-6 pb-5" >
        <!--Form with header-->
        <form asp-action="Contact">
            <div class="card border-light rounded-0 contactsecondary">
                <div class="card-header p-0">
                    <div class="bg-secondary text-white text-center py-2">
                        <h3> Email Form</h3>
                        <p class="m-0">We will gladly help you</p>
                    </div>
                </div>
                <div class="card-body p-3">
                    <!--Body-->
                    @*                    <div class="form-group">
                        <div class="input-group mb-2">
                        <div class="input-group-prepend">
                        <div class="input-group-text"><i class="fa fa-envelope text-secondary"></i></div>
                        </div>
                        <input name="email" type="email" class="form-control" placeholder="email@gmail.com" required>
                        </div>
                        </div>*@
                    <div class="form-group">
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fa fa-list text-secondary"></i></div>
                            </div>
                            <input name="subject" type="text" class="form-control" placeholder="Enter subject" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fa fa-comment text-secondary"></i></div>
                            </div>
                            <textarea id="body" rows="3" name="body" class="form-control" placeholder="Write your message here, pull bottom right to expand text box" required></textarea>
                        </div>
                    </div>
                    <div class="text-center">
                        <input type="submit" title="Send" class="btn btn-secondary btn-block rounded-0 py-2">
                    </div>
                </div>
            </div>
        </form>
        <hr />
        <div style="text-align:center">
            <a href="#" class="socialmediaicons fa fa-facebook"></a>
            <a href="#" class="socialmediaicons fa fa-twitter"></a>
            <a href="#" class="socialmediaicons fa fa-linkedin"></a>
            <a href="#" class="socialmediaicons fa fa-instagram"></a>
        </div>

        <!--Form with header-->
    </div>
</div>

<style>
 
    .contactContent {
        background-color: white;
    }

    .contactsecondary {
        box-shadow: 0 0 25px lightgray;
    }

    .contactValue {
        margin-top: -12px;
    }

    .socialmediaicons {
        padding: 10px;
        font-size: 20px;
        width: 42px;
        text-align: center;
        text-decoration: none;
        margin: 5px 2px;
    }

        .socialmediaicons:hover {
            opacity: 0.7;
        }

    .fa-facebook {
        background: #3B5998;
        color: white;
    }

    .fa-twitter {
        background: #55ACEE;
        color: white;
    }


    .fa-linkedin {
        background: #007bb5;
        color: white;
    }


    .fa-instagram {
        background: #125688;
        color: white;
    }
</style>


